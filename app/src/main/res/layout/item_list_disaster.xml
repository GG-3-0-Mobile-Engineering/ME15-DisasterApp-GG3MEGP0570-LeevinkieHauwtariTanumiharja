<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="30dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_background"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/img_disaster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:srcCompat="@tools:sample/avatars"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_disasterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nama_bencana"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        style="@style/TextColor"
        android:layout_toRightOf="@id/cv_background"/>

    <TextView
        android:id="@+id/tv_disasterLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lokasi_bencana"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="11dp"
        android:textSize="15dp"
        style="@style/TextColor"
        android:layout_below="@id/tv_disasterName"
        android:layout_toRightOf="@id/cv_background"/>

    <TextView
        android:id="@+id/tv_disasterDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tanggal_bencana"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="11dp"
        android:textSize="15dp"
        style="@style/TextColor"
        android:layout_below="@id/tv_disasterLocation"
        android:layout_toRightOf="@id/cv_background"/>


    <TextView
        android:id="@+id/tv_latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="10dp"
        android:layout_marginLeft="11dp"
        android:textSize="15dp"
        style="@style/TextColor"
        android:layout_below="@id/tv_disasterDate"
        android:layout_toRightOf="@id/cv_background"/>

    <TextView
        android:id="@+id/tv_longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="10dp"
        android:layout_marginLeft="11dp"
        android:textSize="15dp"
        style="@style/TextColor"
        android:layout_below="@id/tv_latitude"
        android:layout_toRightOf="@id/cv_background"/>

</RelativeLayout>