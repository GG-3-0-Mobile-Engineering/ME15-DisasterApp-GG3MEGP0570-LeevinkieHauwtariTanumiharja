<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Color for the normal state -->
    <item android:color="@color/white" android:state_enabled="true" android:state_pressed="false" android:state_focused="false" />
    <!-- Color for the pressed state -->
    <item android:color="@color/green" android:state_pressed="true" />
    <!-- Color for the focused state -->
    <item android:color="@color/grey" android:state_focused="true" />
</selector>